<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AssemblyName>Observito.Trace.EventSourceFormatter</AssemblyName>
    <RootNamespace>Observito.Trace.EventSourceFormatter</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Observito</Authors>
    <Product>EventSourceFormatter</Product>
    <Title>EventSourceFormatter</Title>
    <Description>Formatting for EventSource in-process event data (i.e. OnEventsWrittenEventArgs). Allows transformation and inclusion/exclusion of payload values.</Description>
    <Copyright>Observito 2019</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/observito/EventSourceFormatter</PackageProjectUrl>
    <RepositoryUrl>https://github.com/observito/EventSourceFormatter</RepositoryUrl>
    <PackageTags>EventSource,Formatting,ETW,InProcess,Text</PackageTags>
    <PackageReleaseNotes>Signed.</PackageReleaseNotes>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>key.pfx</AssemblyOriginatorKeyFile>
    <Version>1.0.3</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
